<div class="container random-number">
  <% if @articles.nil? %>
    <h5> Articles exist </h5>>
  <% else %>
    <%= link_to 'Add filters', root_path(:filter_marker => 'yes'), class: "btn btn-outline-primary me-2 btn-sm" if params[:filter_marker] != 'yes' %>
    <% if params[:filter_marker] == 'yes' %>
      <%= link_to 'Hide filters', root_path, class: "btn btn-outline-primary me-2 btn-sm" if params[:filter_marker] == 'yes' %>
      <%= render 'filter' %>
    <% end %>
    <%= render 'form', articles: @articles %>
  <% end %>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

