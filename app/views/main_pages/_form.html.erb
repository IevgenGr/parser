<div class="border-top my-2"></div>

<small>
  <div class="row bg-light text-dark">
    <div class="col-2  d-none d-md-block">
      <h6> Image </h6>
    </div>
    <div class="col-3  d-none d-md-block">
      <h6> Headline </h6>
    </div>
    <div class="col-4 d-none d-md-block">
      <h6> Snippet </h6>
    </div>
    <div class="col-1 d-none d-md-block">
      <h6> link </h6>
    </div>
    <div class="col-1 d-none d-md-block">
      <h6> Date </h6>
    </div>
    <div class="col-1 d-none d-md-block">
      <h6> Source </h6>
    </div>
  </div>
  <div class="border-top my-2"></div>


  <% @articles.each do |article| %>
    <div class="row table-hover">
      <div class="col-md-2 border-right">
        <%= image_tag article.image, alt: "Picture should be here", width: "180px", height: "80%" %>
      </div>
      <div class="col-sm-3 col-md-3 border-left fw-bold">
        <%= article.headline %>
      </div>
      <div class="col-md-4 border-right">
        <%= article.snippet %>
      </div>
      <div class="col-md-1 border-right">
        <a href="<%= article.link %>" , target="_blank">link to source</a>
      </div>
      <div class="col-md-1 border-right">
        <%= article.date.strftime('%F') %>
      </div>
      <div class="col-md-1 border-right">
        <%= article.source.name %>
      </div>
    </div>
    <div class="border-top my-2"></div>
  <% end %>

  <%== pagy_bootstrap_nav(@pagy) %>
</small>
